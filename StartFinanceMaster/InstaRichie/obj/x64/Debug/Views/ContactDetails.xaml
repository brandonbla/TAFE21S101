<Page x:ConnectionId='1'
    x:Class="StartFinance.Views.ContactDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StartFinance.Views"
    xmlns:vm="using:StartFinance.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:Template10.Controls"
    mc:Ignorable="d"
                        
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="ContactListDatavalue">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Width="20" Height="20" Symbol="Contact2"/>
                    <TextBlock Text="{Binding ID}" Padding="0,0,15,0"/>
                    <TextBlock Text="{Binding ContactFirstName}" Padding="0,0,15,0"/>
                    <TextBlock Text="{Binding ContactLastName}" Padding="0,0,15,0"/>
                    <TextBlock Text="-" Padding="0,0,15,0"/>
                    <TextBlock Text="{Binding ContactCompany}" Padding="0,0,15,0"/>
                    <TextBlock Text="-" Padding="0,0,15,0"/>
                    <TextBlock Text="{Binding ContactPhone}" Padding="0,0,15,0"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Page.DataContext>
        <vm:MainPageViewModel x:ConnectionId='3' x:Name="ViewModel" />
    </Page.DataContext>

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='4' x:Name="AdaptiveVisualStateGroup">
                <VisualState x:ConnectionId='5' x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                        <!--<Setter Target="AccDataGrid.(RelativePanel.Below)" Value="pageStart" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='6' x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                        <!--<Setter Target="AccDataGrid.(RelativePanel.RightOf)" Value="pageStart" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='7' x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for wide view  -->
                        <!--<Setter Target="AccDataGrid.(RelativePanel.RightOf)" Value="pageStart" />-->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <controls:PageHeader x:ConnectionId='8' x:Name="pageHeader" RelativePanel.AlignLeftWithPanel="True"
			RelativePanel.AlignRightWithPanel="True"
			RelativePanel.AlignTopWithPanel="True" Text="Contact Details">

            <!--  secondary commands  -->
            <controls:PageHeader.SecondaryCommands>
                <AppBarButton x:ConnectionId='23'                                         Label="Settings" />
                <AppBarButton x:ConnectionId='24'                                        Label="Privacy" />
                <AppBarButton x:ConnectionId='25'                                      Label="About" />
            </controls:PageHeader.SecondaryCommands>

        </controls:PageHeader>

        <controls:PageHeader x:ConnectionId='9' x:Name="pageFooter" RelativePanel.AlignLeftWithPanel="True"
			RelativePanel.AlignRightWithPanel="True"
			RelativePanel.AlignBottomWithPanel="True">

            <!--  secondary commands  -->
            <controls:PageHeader.PrimaryCommands>
                <AppBarButton x:ConnectionId='19' Name="ClearFields" Icon="Clear" Label="Clear Fields"                          />
                <AppBarButton x:ConnectionId='20' Name="AddContact"  Icon="Add" Label="Add Contact"                          />
                <AppBarButton x:ConnectionId='21' Name="DeleteContact" Icon="Delete" Label="Delete Contact"                             />
                <AppBarButton x:ConnectionId='22' Name="EditContact" Icon="OpenFile" Label="Edit Contact"                           />
            </controls:PageHeader.PrimaryCommands>

        </controls:PageHeader>

        <!--  page content  -->
        <Pivot>
            <RelativePanel.Below>pageHeader</RelativePanel.Below>
            <RelativePanel.Above>pageFooter</RelativePanel.Above>
            <PivotItem Header="Contacts">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="270"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel x:ConnectionId='10' x:Name="pageStart" Grid.Row="0" VerticalAlignment="Top"
                                Orientation="Vertical" Margin="10,0,10,0" Height="270">
                        <TextBox x:ConnectionId='15' x:Name="ContactFirstNameText" PlaceholderText="" Header="First Name"/>
                        <TextBox x:ConnectionId='16' x:Name="ContactLastNameText" PlaceholderText="" Header="Last Name"/>
                        <TextBox x:ConnectionId='17' x:Name="ContactCompanyText" PlaceholderText="" Header="Company"/>
                        <TextBox x:ConnectionId='18' x:Name="ContactPhoneText" PlaceholderText="" Header="Phone Number"/>
                    </StackPanel>
                    <StackPanel x:ConnectionId='11' Grid.Row="1" x:Name="ButtonsStackPanel" Visibility="Collapsed" Orientation="Horizontal" Margin="12,15,12,12">
                        <Button x:ConnectionId='13' x:Name="UpdateButton"                            Margin="0,0,8,0">Update</Button>
                        <Button x:ConnectionId='14' x:Name="CancelButton"                           >Cancel</Button>
                    </StackPanel>
                    <ListView x:ConnectionId='12' x:Name="ContactListView" Grid.Row="2"
                                VerticalAlignment="Top"
                                ItemTemplate="{StaticResource ContactListDatavalue}" RenderTransformOrigin="0.0,0.0" Height="470" UseLayoutRounding="False" d:LayoutRounding="Auto" Margin="0,140,0,0">
                        <ListView.RenderTransform>
                            <CompositeTransform TranslateY="-140"/>
                        </ListView.RenderTransform>
                        <RelativePanel.Below>pageStart</RelativePanel.Below>
                    </ListView>
                </Grid>
            </PivotItem>
        </Pivot>
    </RelativePanel>
</Page>

